{
  "name": "wooorm",
  "private": true,
  "version": "4.0.0",
  "description": "website",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "https://wooorm.com",
  "type": "module",
  "exports": null,
  "devDependencies": {
    "@fontsource/open-sans": "^5.0.0",
    "@mapbox/polyline": "^1.0.0",
    "@resvg/resvg-js": "^2.0.0",
    "@types/hast": "^3.0.0",
    "@types/mapbox__polyline": "^1.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@wooorm/starry-night": "^3.0.0",
    "cssnano": "^7.0.0",
    "cssnano-preset-advanced": "^7.0.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.24.0",
    "escape-string-regexp": "^5.0.0",
    "glob": "^11.0.0",
    "hast-util-classnames": "^3.0.0",
    "hast-util-from-html": "^2.0.0",
    "hast-util-select": "^6.0.0",
    "hast-util-to-html": "^9.0.0",
    "hast-util-to-text": "^4.0.0",
    "hastscript": "^9.0.0",
    "humanize-url": "^3.0.0",
    "import-meta-resolve": "^4.0.0",
    "levenshtein-edit-distance": "^3.0.0",
    "p-all": "^5.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "rehype-document": "^7.0.0",
    "rehype-infer-reading-time-meta": "^2.0.0",
    "rehype-meta": "^4.0.0",
    "rehype-preset-minify": "^7.0.0",
    "rehype-prevent-favicon-request": "^4.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-cli": "^12.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-preset-wooorm": "^10.0.0",
    "remark-rehype": "^11.0.0",
    "remark-validate-links": "^13.0.0",
    "satori": "^0.10.0",
    "sharp": "^0.33.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "to-vfile": "^8.0.0",
    "trough": "^2.0.0",
    "type-coverage": "^2.0.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.0.0",
    "undici": "^6.0.0",
    "unified": "^11.0.0",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "unist-util-visit-parents": "^6.0.0",
    "vfile": "^6.0.0",
    "vfile-matter": "^5.0.0",
    "vfile-rename": "^3.0.0",
    "vfile-reporter": "^8.0.0",
    "xast-util-feed": "^2.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xo": "^0.59.0",
    "yaml": "^2.0.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "crawl:activity": "node --conditions developments crawl/activity.js",
    "crawl:albums": "node --conditions developments crawl/albums.js",
    "crawl:artists": "node --conditions developments crawl/artists.js",
    "crawl:books": "node --conditions developments crawl/books.js",
    "crawl:github-sponsors": "node --conditions developments crawl/github-sponsors.js",
    "crawl:opencollective": "node --conditions developments crawl/opencollective.js",
    "crawl:shows": "node --conditions developments crawl/shows.js",
    "crawl": "npm run crawl:activity && npm run crawl:albums && npm run crawl:artists && npm run crawl:books && npm run crawl:github-sponsors && npm run crawl:opencollective && npm run crawl:shows",
    "format": "remark . --frail --output --quiet && prettier . --log-level warn --write && stylelint \"**/*.css\" --fix && xo --fix",
    "generate:assets": "node --conditions developments generate/assets.js",
    "generate:structure": "node --no-warnings --experimental-loader=./script/jsx-loader.js generate/index.js",
    "generate:theme": "cp node_modules/@wooorm/starry-night/style/light.css build/syntax.css",
    "generate": "npm run generate:assets && npm run generate:theme && npm run generate:structure",
    "test": "npm run build && npm run crawl && npm run format && npm run generate"
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-preset-wooorm",
      [
        "remark-preset-wooorm/node_modules/remark-gfm/index.js",
        false
      ],
      "remark-gfm",
      [
        "remark-lint-list-item-indent",
        "one"
      ],
      [
        "remark-lint-first-heading-level",
        false
      ]
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "ignore": [
            "selectors-within-list"
          ]
        }
      ]
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "@typescript-eslint/consistent-type-definitions": "off",
      "logical-assignment-operators": "off",
      "no-await-in-loop": "off",
      "no-restricted-globals": "off",
      "unicorn/prefer-at": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
