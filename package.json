{
  "name": "wooorm",
  "private": true,
  "version": "4.0.0",
  "description": "Website",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "repository": "wooorm/wooorm.github.io",
  "bugs": "https://github.com/wooorm/wooorm.github.io/issues",
  "homepage": "https://wooorm.com",
  "type": "module",
  "devDependencies": {
    "@fontsource/open-sans": "^5.0.0",
    "@mapbox/polyline": "^1.0.0",
    "@resvg/resvg-js": "^2.0.0",
    "@types/mapbox__polyline": "^1.0.0",
    "@types/node": "^20.0.0",
    "@types/postcss-preset-env": "^7.0.0",
    "@types/react": "^18.0.0",
    "@types/sharp": "^0.31.0",
    "cssnano": "^6.0.0",
    "cssnano-preset-advanced": "^6.0.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.19.0",
    "escape-string-regexp": "^5.0.0",
    "glob": "^10.0.0",
    "hast-util-classnames": "^3.0.0",
    "hast-util-select": "^6.0.0",
    "hastscript": "^8.0.0",
    "highlight.js": "^11.0.0",
    "humanize-url": "^3.0.0",
    "import-meta-resolve": "^4.0.0",
    "levenshtein-edit-distance": "^3.0.0",
    "node-fetch": "^3.0.0",
    "p-all": "^5.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "rehype-document": "^7.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-infer-reading-time-meta": "^2.0.0",
    "rehype-meta": "^4.0.0",
    "rehype-preset-minify": "^7.0.0",
    "rehype-prevent-favicon-request": "^4.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-cli": "^12.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "remark-rehype": "^11.0.0",
    "remark-validate-links": "^13.0.0",
    "satori": "^0.10.0",
    "sharp": "^0.32.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "to-vfile": "^8.0.0",
    "trough": "^2.0.0",
    "type-coverage": "^2.0.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "unist-util-visit-parents": "^6.0.0",
    "vfile-matter": "^5.0.0",
    "vfile-rename": "^3.0.0",
    "vfile-reporter": "^8.0.0",
    "xo": "^0.56.0",
    "yaml": "^2.0.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --log-level warn && stylelint \"**/*.css\" --fix && xo --fix",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "crawl:activity": "node crawl/activity",
    "crawl:github-sponsors": "node crawl/github-sponsors",
    "crawl:opencollective": "node crawl/opencollective",
    "crawl:artists": "node crawl/artists",
    "crawl:albums": "node crawl/albums",
    "crawl:shows": "node crawl/shows",
    "crawl": "npm run crawl:activity && npm run crawl:github-sponsors && npm run crawl:opencollective && npm run crawl:artists && npm run crawl:albums && npm run crawl:shows",
    "generate:assets": "node generate/assets",
    "generate:theme": "cp node_modules/highlight.js/styles/atom-one-light.css build/syntax.css",
    "generate:structure": "node --no-warnings --experimental-loader=./script/jsx-loader.js generate/index.js",
    "generate": "npm run generate:assets && npm run generate:theme && npm run generate:structure",
    "test": "npm run format && npm run build && npm run crawl && npm run generate"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "ignore": [
            "selectors-within-list"
          ]
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "no-await-in-loop": "off",
      "unicorn/prefer-at": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-preset-wooorm",
      [
        "remark-lint-list-item-indent",
        "space"
      ],
      [
        "remark-lint-first-heading-level",
        false
      ],
      [
        "remark-preset-wooorm/node_modules/remark-gfm/index.js",
        false
      ],
      "remark-gfm"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
